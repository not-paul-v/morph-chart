{
  "name": "lean-chart",
  "version": "1.0.0",
  "description": "Made with create-react-library",
  "author": "itsPauV",
  "license": "MIT",
  "repository": "itsPauV/lean-chart",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "engines": {
    "node": ">=10"
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts",
      "<rootDir>/src/**/*.tsx",
      "!<rootDir>/src/**/*.interface.ts",
      "!<rootDir>/src/**/*.mock.ts",
      "!<rootDir>/src/**/*.module.ts",
      "!<rootDir>/src/**/*.spec.ts",
      "!<rootDir>/src/**/*.test.tsx",
      "!<rootDir>/src/**/*.d.ts"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 90,
        "statements": 90
      }
    }
  },
  "scripts": {
    "build": "microbundle-crl --no-compress --format modern,cjs",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "example": "cd example && npm run start",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint --ext .ts .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:coverage": "cross-env CI=1 react-scripts test --coverage",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && npm install && npm run build",
    "deploy": "gh-pages -d example/build"
  },
  "peerDependencies": {
    "react": "^16.0.0",
    "abs-svg-path": "^0.1.1",
    "normalize-svg-path": "^1.1.0",
    "parse-svg-path": "^0.1.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/d3-interpolate-path": "^2.0.0",
    "@types/d3-scale": "^3.3.0",
    "@types/d3-shape": "^2.1.0",
    "@types/jest": "^25.1.4",
    "@types/node": "^12.12.38",
    "@types/react": "^16.9.27",
    "@types/react-dom": "^16.9.7",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "abs-svg-path": "^0.1.1",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^2.2.0",
    "install-peers-cli": "^2.2.0",
    "microbundle-crl": "^0.13.10",
    "normalize-svg-path": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "parse-svg-path": "^0.1.2",
    "prettier": "^2.0.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.1",
    "typescript": "^3.7.5"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "abs-svg-path": "^0.1.1",
    "d3": "^6.7.0",
    "d3-interpolate-path": "^2.2.3",
    "d3-scale": "^3.3.0",
    "d3-shape": "^2.1.0",
    "parse-svg-path": "^0.1.2"
  }
}
